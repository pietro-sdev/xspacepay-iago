generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bot {
  id           String    @id @default(cuid())
  name         String
  username     String    @unique
  token        String
  profilePhoto String?
  status       String    @default("active")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  steps        BotStep[]
  flows        Flow[]
}

model Flow {
  id        String   @id @default(cuid())
  botId     String   @unique
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  steps     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BotStep {
  id              String   @id @default(cuid())
  botId           String
  type            String
  message         String?
  fileData        String?
  fileMime        String?
  buttonText      String?
  buttonAction    String?
  actionType      String?
  paymentProvider String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  bot             Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  @@index([botId])
}


model User {
  id             String            @id @default(cuid())
  name           String
  email          String            @unique
  password       String
  profilePicture String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  paymentGateways PaymentGateway[]
}

model PaymentGateway {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String
  apiKey      String
  secretKey   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@unique([userId, type])
}
